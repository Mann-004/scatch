        <!-- Heading and Paragraph -->
        <div class="text-center space-y-3">
          <h2 class="text-4xl font-bold">Shop Products</h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Discover our wide range of high-quality travel gear designed for every journey. From stylish suitcases to
            versatile backpacks, find the perfect companion for your next adventure.
          </p>
        </div>

        

        <!-- Product Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-6">
          <% products.forEach(function(product){ %>
            <div class="w-full rounded overflow-hidden shadow hover:shadow-lg transition duration-300">

              <!-- Image Section -->
              <div class="w-full h-52 flex items-center justify-center  "
                style="height: 21rem; background-color: #ffffff;">
                <img class="h-[15rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                  alt="Product Image">
              </div>

              <!-- Info Section -->
              <div class="flex justify-between items-center px-4 py-4  text-[<%= product.textcolor %>]"
                style="background-color: #ffffffa6;">
                <div>
                  <h3 class="text-xl font-bold text-black">
                    <%= product.name %>
                  </h3>
                  <h4 class="text-l text-black">₹ <%= product.price %>
                  </h4>
                </div>
                <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white hover:bg-gray-100"
                  href="/addtocart/<%= product._id %>">
                  <i class="ri-add-line text-black texl-l"></i>
                </a>
              </div>

            </div>
            <% }) %>
