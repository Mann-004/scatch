<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adminpanel-create product</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        *{
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>
<body>

    <% if(success.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
        <% } %>

       <!-- Navbar -->
<nav class="w-full flex justify-between items-center px-6 py-4 shadow-sm bg-white">
  <h3 class="text-3xl font-bold text-gray-800">Scatch</h3>
  <div class="flex gap-6 text-lg font-medium">
    <a href="/shop" class="hover:text-blue-600 transition">Shop</a>
    <a href="/users/logout" class="text-red-600 hover:underline">Logout</a>
  </div>
</nav>

<!-- Main Content -->
<div class="min-h-screen flex">
  <!-- Sidebar -->
  <aside class="w-[20%] h-full bg-white border-r px-6 py-10 shadow-inner">
    <h4 class="text-lg font-semibold mb-4">Manage Products</h4>
    <nav class="flex flex-col space-y-3 text-gray-700">
      <a href="/products" class="hover:text-blue-500">All Products</a>
      <a href="/products/create" class="hover:text-blue-500">Create New Product</a>
      <a href="/products/category/backpacks" class="hover:text-blue-500">Backpacks</a>
      <a href="/products/category/luggage" class="hover:text-blue-500">Luggage</a>
      <a href="/products/category/duffles" class="hover:text-blue-500">Duffles</a>
    </nav>
  </aside>

  <!-- Main Panel -->
  <main class="flex-grow px-10 py-10 bg-blue-50">
    <div class="bg-white shadow-lg rounded-lg p-8">
      <h2 class="text-2xl font-bold mb-6">Create New Product</h2>
      <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data" class="space-y-8">
        <!-- Product Details -->
        <div>
          <h3 class="text-lg font-semibold mb-4">Product Details</h3>
          <div class="mb-4">
            <label class="block mb-2 font-medium">Product Image</label>
            <input name="image" type="file" class="py-2 px-4 rounded border border-gray-300 w-full bg-zinc-50">
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <input name="name" type="text" placeholder="Product Name" class="border p-2 rounded w-full">
            <input name="price" type="text" placeholder="Product Price" class="border p-2 rounded w-full">
            <input name="discount" type="text" placeholder="Discount Price" class="border p-2 rounded w-full">
          </div>
        </div>

        

        <!-- Category Selection -->
        <div>
          <h3 class="text-lg font-semibold mb-4">Category</h3>
          <select name="category" class="w-full p-2 border rounded bg-zinc-50">
            <option value="">Select a Category</option>
            <option value="backpacks">Backpacks</option>
            <option value="luggage">Luggage</option>
            <option value="duffles">Duffles</option>
          </select>
        </div>

        <input
          type="submit"
          value="Create New Product"
          class="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-full transition"
        >
      </form>
    </div>
  </main>
</div>


        <%- include('./partials/footer') %>
        
    </body>
